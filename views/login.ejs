<!-- header -->
<%- include("partials/header"); -%>

<!-- Contact form -->
<div class="contact">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <hr class="my-5">
                <div class="card card-outline-secondary">
                    <div class="card-header">
                        <h3 class="mb-0" style="text-align: center;">Autentificare</h3>
                    </div>
                    <div class="card-body">
                        <form  action="/login" method="POST" autocomplete="off" class="form" role="form">
                            <fieldset>
                                <label class="mb-0" for="name">Nume</label>
                                <div class="row mb-2">
                                    <div class="col-lg-12">
                                        <input class="form-control" id="name" name="username" required="" type="text">
                                    </div>
                                </div>
                                <label class="mb-0" for="name">Parola</label>
                                <div class="row mb-2">
                                    <div class="col-lg-12">
                                        <input class="form-control" id="name" name="password" required="" type="text">
                                    </div>
                                </div>                                
                                <button class="btn btn-secondary btn-lg float-right mt-2" type="submit">Log in</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


