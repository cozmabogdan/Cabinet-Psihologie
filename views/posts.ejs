<!--header-->
<%- include("partials/header"); -%>

<% posts.forEach(function(post){%>
    <div class="card mb-4" style="margin-top: 20px;">
        <div class="card-body" >
            <h2 class="mt-4"> <%= post.title %> </h2>
            <p class="text-dark">
            <%=post.content.substring(0, 200) + " ..." %>
            <a class="text-primary" href="/post/<%=post._id%>">Citeste mai mult</a>
            </p>
        </div>
        <div class="card-footer text-muted">
            <% let monthNames = ["Ianuarie", "Februarie", "Martie", "Aprilie", "Mai", "Iunie", "Iulie", "August", "Septembrie", "Octombrie", "Noiembrie", "Decembrie"]; %> 
            <% let month = monthNames[post.postedAt.getMonth()]; %>
            <p>Postat la <%= post.postedAt.getDate() + ' ' + month + ' ' + post.postedAt.getFullYear()  %> de <a class="text-primary" href="#"><%= author %></a></p>        
        </div>
    </div>
<%})%>

<!--footer-->
<%- include("partials/footer"); -%>