<%- include("partials/header") -%>

<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="mt-4 card card-outline-secondary">
        <div class="sidebar-header">
            <h3>Admin Dashboard</h3>
        </div>

        <ul class="list-unstyled components">
            <p>Arhiva</p>               
            <li>
                <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Postari</a>
                <ul class="collapse list-unstyled" id="pageSubmenu">
                    <li>
                        <a href="#">Postare 1</a>
                    </li>
                    <li>
                        <a href="#">Postare 2</a>
                    </li>
                    <li>
                        <a href="#">Postare 3</a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <!--New post form-->
    <div id="content" class="mt-4 ml-3 w-100">
        <div id="content" class="card card-outline-secondary">
            <div class="card-header">
                <h3 class="mb-0 row justify-content-center"> Formular postare noua</h3>
            </div>
            <div class="card-body">
                <form action="/admin" method="POST" autocomplete="off" class="form" role="form">
                    <div class="row mb-2">
                        <div class="col-lg-12">
                            <label class="mb-0" for="title">Titlu</label>
                            <input class="form-control" id="name" name="postTitle" required="" type="text">
                            <label class="mb-0" for="content">Articol</label>
                            <textarea class="form-control" name="postBody" rows="5"></textarea>
                        </div>
                    </div>                            
                    <button class="btn btn-secondary btn-lg float-right mt-4" name="button" type="submit">Posteaza</button>                    
                </form>
            </div>
        </div>
    </div>

</div>

