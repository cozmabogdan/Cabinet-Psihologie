<!--header-->
<%- include("partials/header") -%>

<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="mt-4 card card-outline-secondary">
        <div class="sidebar-header">
            <h3>Admin Dashboard</h3>
        </div>

        <ul class="list-unstyled components">
            <p>Arhiva</p>               
            <li>
                <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Postari</a>
                <ul class="collapse list-unstyled" id="pageSubmenu">
                    <li>
                        <a href="#">Postare 1</a>
                    </li>
                    <li>
                        <a href="#">Postare 2</a>
                    </li>
                    <li>
                        <a href="#">Postare 3</a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>

    <!--New post form-->
    <div id="content" class="mt-4 ml-3 w-100">
        <div id="content" class="card card-outline-secondary">
            <div class="card-header">
                <h3 class="mb-0" style="text-align: center;"> Formular postare noua</h3>
            </div>
            <div class="card-body">
                <form autocomplete="off" class="form" role="form">
                    <fieldset>
                        <label class="mb-0" for="title">Titlu</label>
                        <div class="row mb-2">
                            <div class="col-lg-12">
                                <input class="form-control" id="name" name="name" required="" type="text">
                            </div>
                        </div>                
                        <label class="mb-0" for="content">Articol</label>
                        <div id="toolbar" class="form-control">
                            <button class="ql-bold">Bold</button>
                            <button class="ql-italic">Italic</button>
                            <button class="ql-underline">Underline</button>
                            <button class="ql-link">Link</button>
                            <button class="ql-blockquote">Quote</button>                                                                     
                            <button class="ql-code-block">Code</button>
                            <button class="ql-image">Image</button>
                          </div>
                          <div id="editor" class="form-control">
                            <p></p>
                          </div>
                        <button class="btn btn-secondary btn-lg float-right mt-4" type="submit">Posteaza</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

</div>

<!--footer-->
<%- include("partials/footer") -%>