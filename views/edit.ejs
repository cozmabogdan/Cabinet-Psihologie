<!--header-->
<%- include("partials/header"); -%>

<div class="card mb-4" style="margin-top: 20px;">
    <div class="card-body" >
        <h2 class="post-title row justify-content-center"> <%= title %> </h2>
        <p class="post-text"><%- content %></p>
    </div>
    <div class="card-footer text-muted">
        <% let monthNames = ["Ianuarie", "Februarie", "Martie", "Aprilie", "Mai", "Iunie", "Iulie", "August", "Septembrie", "Octombrie", "Noiembrie", "Decembrie"]; %> 
        <% let month = monthNames[postedAt.getMonth()]; %>
        <p>Postat la <%= postedAt.getDate() + ' ' + month + ' ' + postedAt.getFullYear()  %> de <a class="text-primary" href="#"><%= author %></a></p>        
    </div>
</div>

<!--Modify post-->
<div class="card-body">
    <form action="/edit" method="POST" autocomplete="off" class="form" role="form">
        <div class="row mb-2">
            <div class="col-lg-12">
                <label class="mb-0" for="title">Titlu</label>
                <input class="form-control" id="name" name="editTitle" required="" type="text">
                <label class="mb-0" for="content">Articol</label>
                <textarea class="form-control" name="editBody" rows="5"></textarea>
            </div>
        </div>                            
        <button class="btn btn-secondary btn-lg float-right mt-4" name="button" type="submit">Modifica</button>                    
    </form>
</div>

<!--footer-->
<%- include("partials/footer"); -%>